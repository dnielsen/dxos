{
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "root": "docs",
  "projectType": "application",
  "targets": {
    "prerelease": {
      "executor": "nx:run-script",
      "inputs": [
        "default",
        "^production",
        {
          "env": "DX_ENVIRONMENT"
        },
        {
          "env": "DX_RELEASE"
        },
        {
          "env": "SEGMENT_API_KEY"
        }
      ],
      "outputs": [
        "docs/docs/api",
        "docs/docs/.vuepress/dist"
      ],
      "options": {
        "script": "prerelease"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "docs/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "generate:api": {
      "executor": "nx:run-script",
      "outputs": [
        "docs/docs/api"
      ],
      "options": {
        "script": "generate:api"
      },
      "dependsOn": [
        "^build"
      ]
    },
    "toolbox": {
      "executor": "@dxos/toolbox:exec"
    }
  }
}